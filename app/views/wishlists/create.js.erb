<% if flash[:success] %>
  toastr.success("<%= flash[:success] %>")
<% end %>
<% if flash[:warning] %>
  toastr.warning("<%= flash[:warning] %>")
<% end %>
<% if flash[:danger] %>
  toastr.error("<%= flash[:danger] %>")
<% end %>
<% wishlist = Wishlist.find_by book_id: @book.id, user_id: current_user.id %>
<% if params[:page_show].present? %>
  $('.add-to-wishlist').html('<%= j render "books/remove_wishlist", wishlist: wishlist, book: @book %>')
<% else %>
  $('.button-reaction-<%= @book.id %>').html('<%= j render "static_pages/button_book", book: @book, wishlist: wishlist %>');
<% end %>
