<div class="breadcrumbs-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="breadcrumbs">
         <h2>WISHLISTS</h2>
         <ul class="breadcrumbs-list">
          <li>
            <%= link_to root_path, title: "Return to Home" do %>
              Home
            <% end %>
          </li>
          <li>Wishlists</li>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>

<div class="shopping-area section-padding">
<div class="container">
    <div class="row not-wishlist">
      <% if @wishlists.any? %>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="wishlist-right-area table-responsive">
                <table class="wish-list-table">
                    <thead>
                        <tr>
                            <th class="t-product-name"><%= t "product" %></th>
                            <th class="product-details-comment"><%= t "product_detail" %></th>
                            <th class="w-product-remove"><%= t "remove" %></th>
                        </tr>
                    </thead>
                    <tbody id="wishlist-index">
                      <%= render partial: "wishlist", collection: @wishlists %>
                    </tbody>
                </table>
            <div class="wishlist-bottom-link">
                <%= link_to root_path, class: 'wishlist-single-link' do %>
                    <i class="fas fa-angle-double-left"></i>
                    <%= t "back" %>
                <% end %>
            </div>
        </div>
      </div>
      <% else %>
      <p class="text-danger"><%= t "no_data" %></p>
  <% end %>
    </div>
</div>
</div>
