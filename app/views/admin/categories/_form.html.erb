<div class="modal-dialog form-category">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title"><%= title %></h4>
      <button type="button" class="btn btn-danger" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <%= simple_form_for [:admin, @category], remote: true, authenticity_token: true, html: {novalidate: true, class: "js-form-category no-bs-validation"} do |f| %>
        <div class="row form-group">
          <div class="col-md-12">
            <%= f.input :name, placeholder: t(".name"), label: t(".name"),
              input_html: {class: "form-control js-category-name"} %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-12">
            <%= f.cktext_area :description,
              placeholder: t(".content"), label: t(".content"),
              input_html: {class: "form-control js-category-description"} %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-4">
            <%= f.input :status, label: t(".status"), input_html: {class: "form-control js-category-is_enable"},
              label_html: {class: "col-md-3 switch-btn-category"}, content_html: {class: "col-md-3"},
              input_group_html: {class: "input-group"} do %>
                <label class="switch switch-primary">
                  <%= f.check_box :status, {checked: (@category.persisted? ? @category.status : true)} %>
                  <span></span>
                </label>
            <% end %>
        </div>
          </div>
        <div class="row form-group">
          <div class="col-md-12 text-right">
            <%= f.button :submit, type: "submit", title: t(".save"),
              class: "btn btn-sm btn-primary js-button-form-category" do %>
              <i class="fa fa-floppy-o" aria-hidden="true"></i>
              <%= t ".save" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
