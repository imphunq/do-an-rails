<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <%= select_tag :month, options_for_select(Settings.month_in_year.map {|key, value| [value.text, value.index]},
          selected: Date.current.month || params[:month]),
          class: "form-control select-select2 remove-padding select-month-stats" %>
        </div>
      </div>
      <div class="col-md-3">
        <%= select_tag :year, options_for_select(@year_order.map {|key| [key, key]},
        selected: Date.current.year || params[:year]),
        class: "form-control select-select2 remove-padding select-month-stats" %>
      </div>
    </div>
    <div class="row">
      <section class="col-lg-12 connectedSortable">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">
              <i class="fas fa-chart-pie mr-1"></i>
              <%= t ".title" %>
            </h3>
          </div>
          <div class="card-body">
            <div class="tab-content p-0 stats-order">
              <%= render partial: "stats" %>
            </div>
          </div><!-- /.card-body -->
        </div>
      </section>
    </div>
  </div>
</section>
