<%= form_for [:admin, @book], authenticity_token: true, html: { autocomplete: "off" } do |f| %>
  <div class="row form-user">
    <div class="col-md-3">
      <div class="panel-group panel-left">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= f.error_span :image %>
            <div id="img-size-error" class="text-danger"></div>
            <%= image_tag @book.image.url, id: "js-image-tag" %>
          </div>
          <div class="panel-heading">
          <h4 class="avatar-title"><strong><%= t ".image" %></strong></h4>
            <div class="btn btn-primary" id="btn-upload-image-book" title="<%= t ".upload" %>">
              <i class="fa fa-upload"></i>
            </div>
            <%= f.file_field :image, id: "js-image-input" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-7">
      <div class="panel-group panel-right">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4><strong><%= t ".create_book" %></strong></h4>
          </div>
          <div class="panel-body">
            <div class="simple_form form-horizontal">
              <div class="form-group">
                <%= f.label :name, class: "control-label col-md-2" do %>
                  <span class="text-danger">*</span>
                  <%= t ".name" %>
                <% end %>
                <div class="col-md-9">
                  <%= f.text_field :name, class: "form-control" %>
                  <%= f.error_span :name %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :description, class: "control-label col-md-2" do %>
                  <span class="text-danger">*</span>
                  <%= t ".description" %>
                <% end %>
                <div class="col-md-9">
                  <%= f.cktext_area :description, class: "form-control" %>
                  <%= f.error_span :description %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :author, class: "control-label col-md-2" do %>
                  <%= t ".author" %>
                <% end %>
                <div class="col-md-9">
                  <%= f.select :author_id, options_for_select(Author.all.map {|author| [author.name, author.id]}, selected: @book.author_id),
                    {include_blank: t(".select_author")}, class: "form-control select-select2 remove-padding" %>
                  <%= f.error_span :author %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :category, class: "control-label col-md-2" do %>
                  <%= t ".category" %>
                <% end %>
                <div class="col-md-9">
                  <%= f.select :category_ids, options_for_select(Category.all.map {|cate| [cate.name, cate.id]}, selected: @book.category_ids),
                    {include_blank: t(".select_author")}, class: "form-control select-select2 remove-padding", multiple: true %>
                  <%= f.error_span :author %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :money, class: "control-label col-md-2" do %>
                  <span class="text-danger">*</span>
                  <%= t ".money" %>
                <% end %>
                <div class="col-md-9">
                  <%= f.number_field :money, class: "form-control" %>
                  <%= f.error_span :money %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :quantity, class: "control-label col-md-2" do %>
                  <span class="text-danger">*</span>
                  <%= t ".quantity" %>
                <% end %>
                <div class="col-md-9">
                  <%= f.number_field :quantity, class: "form-control" %>
                  <%= f.error_span :quantity %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :publisher, class: "control-label col-md-2" do %>
                  <%= t ".publisher" %>
                <% end %>
                <div class="col-md-9">
                  <%= f.text_field :publisher, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :version, class: "control-label col-md-2" do %>
                  <%= t ".version" %>
                <% end %>
                <div class="col-md-9">
                  <%= f.number_field :version, class: "form-control" %>
                </div>
              </div>
              <div class="form-group form-actions form-button-wrapper text-center">
                <span>
                  <%= f.button :button, type: "submit", title: t(".save"),
                    class: "btn btn-sm btn-primary", name: nil do %>
                    <i class="fa fa-arrow-right"></i>
                    <%= t ".save" %>
                  <% end %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
