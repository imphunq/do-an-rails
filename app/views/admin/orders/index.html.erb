<div class="content-header">
  <div class="header-section">
    <h1>
      <%= t ".order_management" %>
    </h1>
  </div>
</div>
<div class="block full">
  <div class="block-title">
    <p><strong><%= t ".list_orders" %></strong></p>
  </div>
  <div class="table-responsive test-created-table">
    <div class="dataTables_wrapper">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body table-responsive p-0">
              <table class="table table-hover text-nowrap">
                <thead>
                  <tr>
                    <th class="text-center"><%= t ".index" %></th>
                    <th class="text-center"><%= t ".user_name" %></th>
                    <th class="text-center"><%= t ".address" %></th>
                    <th class="text-center"><%= t ".date" %></th>
                    <th class="text-center"><%= t ".status" %></th>
                    <th class="text-center"><%= t ".action" %></th>
                  </tr>
                </thead>
                <tbody id="list-orders">
                  <%= render @orders %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="pagination">
      <%= paginate @orders %>
    </div>
  </div>
</div>
<div id="order-modal" class="modal fade" data-backdrop="static"></div>


