<tr>
  <td class="product-image product-cart-img">
    <%= create_index params[:page], order_counter, Settings.paginate.show_15 %>
  </td>
  <td class="t-product-name">
    <%= I18n.l order.created_at %>
  </td>
  <td class="product-unit-price">
      <p><%= format_money_amount order.total %></p>
  </td>
  <td id="status-order-change">
    <span class="status-order-<%= order.status %>"><%= order.status %></span>
  </td>
  <td class="product-remove">
    <%= link_to order_path(order), remote: true do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <% if order.pending? %>
      <%= link_to order_path(order, status: :refuse), method: :put, remote: true, title: "Cancel Order" do %>
        <i class="fas fa-times"></i>
      <% end %>
    <% end %>
  </td>
</tr>
